{% extends 'base.html.twig' %}

{% block body %}
    <h1>Résumé</h1>

    <table>
        <tbody>
            <tr>
                <th>N° de réservation</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>N° de vol</th>
                <td>{{ flight.id }}</td>
            </tr>
            <tr>
                <th>Sièges réservés</th>
                <td>{{ reservation.nbReservedSeats }}</td>
            </tr>
            <tr>
                <th>Aéroport de départ</th>
                <td>{{ flight.departure }}</td>
            </tr>
            <tr>
                <th>Aéroport d'arrivée</th>
                <td>{{ flight.arrival }}</td>
            </tr>

            {% if flight.pilot.role == 'Pilot' %}
                <tr>
                    <th>Pilote</th>
                    <td>{{ flight.pilot }}</td>
                </tr>
            {% endif %}
            <tr>
                <th>Modèle de l'avion</th>
                <td>{{ planemodel.model }}</td>
            </tr>
            <tr>
                <th>Vitesse de croisière</th>
                <td>{{ planemodel.cruiseSpeed }}</td>
            </tr>
            <tr>
                <th>Description du vol</th>
                <td>{{ flight.description }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}