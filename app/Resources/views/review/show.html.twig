{% extends 'base.html.twig' %}

{% block body %}
    <h1>Les avis</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ review.id }}</td>
            </tr>
            <tr>
                <th>Utilisateur noté</th>
                <td>{{ review.userRated }}</td>
            </tr>
            <tr>
                <th>Auteur de l'avis</th>
                <td>{{ review.reviewAuthor}}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ review.text }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ review.note }}</td>
            </tr>
            <tr>
                <th>Date de publication</th>
                <td>{% if review.publicationDate %}{{ review.publicationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('review_index') }}">Retour à la liste des avis</a>
        </li>
        <li>
            <a href="{{ path('review_edit', { 'id': review.id }) }}">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
